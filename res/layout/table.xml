<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_weight="2"		
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    >
    <ImageView android:id="@+id/flop0"
       android:src="@drawable/nocard"
       android:layout_weight="1"
       android:layout_height="match_parent"
       android:layout_width="0dp"/>
    <ImageView android:id="@+id/flop1"
       android:src="@drawable/nocard"
       android:layout_weight="1"
       android:layout_height="match_parent"
       android:layout_width="0dp"/>
    <ImageView android:id="@+id/flop2"
       android:src="@drawable/nocard"
       android:layout_weight="1"
       android:layout_height="match_parent"
       android:layout_width="0dp"/>
    <ImageView android:id="@+id/turn"
       android:src="@drawable/nocard"
       android:layout_weight="1"
       android:layout_height="match_parent"
       android:layout_width="0dp"/>
    <ImageView android:id="@+id/river"
       android:src="@drawable/nocard"
       android:layout_weight="1"
       android:layout_height="match_parent"
       android:layout_width="0dp"/>
  </LinearLayout>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_weight="1"		
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    >
    <ImageView android:id="@+id/edge0"
       android:layout_weight="1"
       android:layout_height="match_parent"
       android:layout_width="0dp"/>
    <ImageView android:id="@+id/edge1"
       android:layout_weight="1"
       android:layout_height="match_parent"
       android:layout_width="0dp"/>
  </LinearLayout>
  <include layout="@layout/clear_delete"/>
  <include layout="@layout/card_buttons_dealbottom"/>
</LinearLayout>

